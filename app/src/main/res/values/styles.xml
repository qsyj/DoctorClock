<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="bar_bg_color">@color/theme_color</item>
        <item name="bar_text_title_color">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="bar_height">@dimen/actionbar_height</item>
        <item name="bar_text_title_size">@dimen/actionbar_title_size</item>
        <item name="bar_text_size">@dimen/actionbar_text_size</item>
        <item name="bar_back_img">@drawable/back</item>
        <item name="bar_btn_bg">@drawable/back</item>
        <item name="bar_bg_color_pressed">@color/bar_bg_color_pressed</item>
        <item name="bar_ic_navigation">@drawable/ic_navigation</item>
    </style>

    <style name="PopupAnimaFade" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/basepopup_fade_in</item>
        <item name="android:windowExitAnimation">@anim/basepopup_fade_out</item>
    </style>
    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
    <style name="DateSelect" parent="@android:style/Theme.Holo.Light.Dialog.MinWidth">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="windowMinWidthMinor">100%</item>
    </style>


    <style name="FullScreenDialog" parent="android:Theme.Dialog">

        <!-- 窗口设为无标题 -->
        <item name="android:windowNoTitle">true</item>

        <!-- 窗口浮现在activity之上 -->
        <item name="android:windowIsFloating">false</item>

        <!-- 背景透明 -->
        <item name="android:windowBackground">@color/title_transparent_black</item>

        <!-- 背景模糊 -->
        <item name="android:backgroundDimEnabled">true</item>

        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>

        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>

        <!-- 全屏 -->
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="horizontal_line_style">
        <item name="android:background">@color/line_and_outline_grey</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.4dp</item>
    </style>

    <style name="Theme_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
